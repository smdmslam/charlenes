rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             (request.auth.token.admin == true || 
              request.auth.token.email == "s.moralesmed@gmail.com");
    }
    
    // Member Profiles Collection
    // Users can read and write their own profile only
    match /memberProfiles/{userId} {
      allow read: if isOwner(userId);
      allow create: if isAuthenticated() && isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }
    
    // Membership Applications Collection
    // Anyone can create an application (for public form)
    // Only authenticated users can read their own applications
    // Admins can read all
    match /membershipApplications/{applicationId} {
      allow create: if true; // Public form submission
      allow read: if isAuthenticated() && 
                     (resource.data.email == request.auth.token.email || 
                      isAdmin());
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Job Applications Collection
    // Anyone can create an application (for public form)
    // Only authenticated users can read their own applications
    // Admins can read all
    match /jobApplications/{applicationId} {
      allow create: if true; // Public form submission
      allow read: if isAuthenticated() && 
                     (resource.data.email == request.auth.token.email || 
                      isAdmin());
      allow list: if isAdmin(); // Allow admins to list all applications
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
